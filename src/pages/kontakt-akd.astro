---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { sanityClient } from '@/lib/sanity'
import { kontaktPageQuery } from '@/lib/sanityQueries'
import { portableTextToHtml } from '@/lib/portableTextSerializer'
import type { KontaktPage } from '@/types/sanity'

export const prerender = true;

const page = await sanityClient.fetch<KontaktPage>(kontaktPageQuery)
if (!page) return Astro.redirect('/404')

const headlineHtml = page.hero?.headline
  ? portableTextToHtml(page.hero.headline, { addHeadingIds: false })
  : ''
const introHtml = page.hero?.introText
  ? portableTextToHtml(page.hero.introText, { addHeadingIds: false })
  : ''

const metaTitle = page.seo?.metaTitle || page.title || 'Kontakt AKD'
const metaDescription = page.seo?.metaDescription || ''

const hq = page.headquarters
const factories = page.factories || []
const channels = page.contactChannels
const wb = page.whistleblower

const channelIcons: Record<string, string> = {
  mail: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>',
  globe: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>',
  briefcase: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>',
}
---

<BaseLayout
  title={metaTitle}
  description={metaDescription}
  navTheme="dark"
>

  <!-- SECTION 1: HERO -->
  {page.hero && (
    <section class="relative bg-forest-green pt-12 md:pt-16 lg:pt-20 pb-28 md:pb-40 lg:pb-48 section-after-nav">
      <div class="container-custom">
        {page.hero.preHeadline && (
          <p class="text-mint font-bold text-base mb-6 uppercase tracking-wide text-center">
            {page.hero.preHeadline}
          </p>
        )}

        {headlineHtml && (
          <h1 class="text-center mb-8 md:mb-12 max-w-4xl mx-auto">
            <span class="block font-sans font-extrabold text-[43px] md:text-[58px] lg:text-[62px] text-white uppercase leading-tight" set:html={headlineHtml} />
          </h1>
        )}

        {introHtml && (
          <div class="max-w-3xl mx-auto text-center pb-8 md:pb-12 text-white/80 text-lg md:text-xl leading-relaxed prose-akd" set:html={introHtml} />
        )}
      </div>
    </section>
  )}


  <!-- SECTION 2: LOCATIONS -->
  <section class="bg-white pt-1 pb-16 md:pb-24">
    <div class="container-custom -mt-20 sm:-mt-24 md:-mt-28 lg:-mt-[100px] relative z-10">

      <!-- HQ card — full width, horizontal -->
      {hq && (
        <div class="bg-warm-light rounded-2xl shadow-xl overflow-hidden mb-6">
          <div class="grid grid-cols-1 lg:grid-cols-2">
            <div class="relative aspect-[4/3] lg:aspect-auto lg:min-h-[320px]">
              <img
                src={hq.imageUrl || '/images/siloer.png'}
                alt={hq.imageAlt || 'AKD Danmarks hovedkontor i Brande'}
                class="absolute inset-0 w-full h-full object-cover"
              />
            </div>

            <div class="p-8 md:p-10 flex flex-col justify-center">
              {hq.label && (
                <span class="inline-block text-xs font-bold uppercase tracking-wider text-mint mb-2">
                  {hq.label}
                </span>
              )}

              <h2 class="font-sans font-bold text-charcoal text-2xl md:text-3xl mb-6 leading-tight">
                {hq.name}
              </h2>

              <div class="space-y-3 mb-6">
                {hq.addressLines && (
                  <div class="flex items-start gap-3">
                    <div class="w-8 h-8 bg-mint/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-4 h-4 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                    <address class="not-italic text-charcoal/80 text-sm leading-relaxed">
                      {hq.addressLines.map((line: string) => (
                        <span class="block">{line}</span>
                      ))}
                    </address>
                  </div>
                )}

                {hq.phone && (
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-mint/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-4 h-4 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </div>
                    <a href={`tel:${hq.phone.replace(/\s/g, '')}`} class="text-charcoal/80 text-sm hover:text-mint transition-colors font-medium">
                      {hq.phone}
                    </a>
                  </div>
                )}

                {hq.email && (
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-mint/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-4 h-4 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <a href={`mailto:${hq.email}`} class="text-charcoal/80 text-sm hover:text-mint transition-colors font-medium">
                      {hq.email}
                    </a>
                  </div>
                )}

                {hq.openingHours && hq.openingHours.length > 0 && (
                  <div class="flex items-start gap-3">
                    <div class="w-8 h-8 bg-mint/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-4 h-4 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                    <div class="text-charcoal/80 text-sm leading-relaxed">
                      {hq.openingHours.map((line: string) => (
                        <span class="block">{line}</span>
                      ))}
                    </div>
                  </div>
                )}
              </div>

              {hq.mapsLink && (
                <a
                  href={hq.mapsLink}
                  class="inline-flex items-center gap-2 text-burnt-orange font-semibold hover:text-amber transition-colors group"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Find vej
                  <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              )}

              {hq.cvr && (
                <p class="text-charcoal/40 text-xs mt-4">CVR-nr.: {hq.cvr}</p>
              )}
            </div>
          </div>
        </div>
      )}

      <!-- Factory cards — 2-col grid -->
      {factories.length > 0 && (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {factories.map((loc) => (
            <div class="bg-warm-light rounded-2xl overflow-hidden shadow-md flex flex-col">

              {loc.mapsEmbed && (
                <div class="w-full relative flex-shrink-0" style="height: 176px;">
                  <iframe
                    src={loc.mapsEmbed}
                    width="100%"
                    height="100%"
                    style="border:0; filter: grayscale(1);"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title={`Kort over ${loc.name}`}
                    class="absolute inset-0 w-full h-full"
                  ></iframe>
                </div>
              )}

              <div class="p-6 flex flex-col flex-1">
                {loc.label && (
                  <span class="inline-block text-xs font-bold uppercase tracking-wider text-mint mb-2">
                    {loc.label}
                  </span>
                )}

                <h3 class="font-sans font-bold text-charcoal text-xl mb-4 leading-tight">
                  {loc.name}
                </h3>

                <div class="space-y-3 mb-6">
                  {loc.addressLines && (
                    <div class="flex items-start gap-3">
                      <div class="w-8 h-8 bg-mint/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                        <svg class="w-4 h-4 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                      </div>
                      <address class="not-italic text-charcoal/80 text-sm leading-relaxed">
                        {loc.addressLines.map((line: string) => (
                          <span class="block">{line}</span>
                        ))}
                      </address>
                    </div>
                  )}

                  {loc.openingHours && loc.openingHours.length > 0 && (
                    <div class="flex items-start gap-3">
                      <div class="w-8 h-8 bg-mint/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                        <svg class="w-4 h-4 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                      </div>
                      <div class="text-charcoal/80 text-sm leading-relaxed">
                        {loc.openingHours.map((line: string) => (
                          <span class="block">{line}</span>
                        ))}
                      </div>
                    </div>
                  )}
                </div>

                {loc.mapsLink && (
                  <div class="mt-auto">
                    <a
                      href={loc.mapsLink}
                      class="inline-flex items-center gap-2 text-burnt-orange font-semibold hover:text-amber transition-colors group"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      Find vej
                      <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    </a>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      )}

    </div>
  </section>


  <!-- SECTION 3: CONTACT CHANNELS -->
  {channels && (
    <section class="bg-warm-light py-16 md:py-24">
      <div class="container-custom">
        <div class="max-w-2xl mx-auto text-center mb-12">
          {channels.preHeader && (
            <p class="text-mint font-bold text-base mb-4 uppercase tracking-wide">
              {channels.preHeader}
            </p>
          )}
          {channels.headline && (
            <h2 class="font-sans font-bold text-2xl md:text-3xl text-charcoal mb-4">
              {channels.headline}
            </h2>
          )}
          {channels.description && (
            <p class="text-charcoal/70 text-lg leading-relaxed">
              {channels.description}
            </p>
          )}
        </div>

        {channels.channels && channels.channels.length > 0 && (
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
            {channels.channels.map((ch) => (
              <a
                href={`mailto:${ch.email}`}
                class="bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition-shadow group text-center"
              >
                <div class="w-12 h-12 bg-mint/10 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <Fragment set:html={channelIcons[ch.icon || 'mail'] || channelIcons.mail} />
                  </svg>
                </div>
                <h3 class="font-sans font-bold text-charcoal text-lg mb-2 group-hover:text-mint transition-colors">{ch.title}</h3>
                {ch.description && (
                  <p class="text-charcoal/60 text-sm mb-3">{ch.description}</p>
                )}
                <span class="text-burnt-orange font-semibold text-sm group-hover:underline">{ch.email}</span>
              </a>
            ))}
          </div>
        )}
      </div>
    </section>
  )}


  <!-- SECTION 4: WHISTLEBLOWER CALLOUT -->
  {wb && (
    <section class="bg-forest-green py-16 md:py-24">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto bg-white/10 rounded-2xl border border-white/10 p-8 md:p-12 flex flex-col md:flex-row items-center gap-8 md:gap-12">

          <div class="flex-shrink-0">
            <div class="w-24 h-24 bg-mint/20 rounded-2xl flex items-center justify-center">
              <svg class="w-12 h-12 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
          </div>

          <div class="flex-1 text-center md:text-left">
            {wb.headline && (
              <h2 class="font-sans font-bold text-2xl md:text-3xl text-white mb-4">
                {wb.headline}
              </h2>
            )}
            {wb.description && (
              <p class="text-white/90 text-base md:text-lg leading-relaxed mb-8">
                {wb.description}
              </p>
            )}
            {wb.linkHref && wb.linkText && (
              <a
                href={wb.linkHref}
                class="inline-flex items-center gap-2 bg-mint text-forest-green font-bold px-6 py-3 rounded-full hover:bg-white transition-colors"
              >
                {wb.linkText}
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

</BaseLayout>
