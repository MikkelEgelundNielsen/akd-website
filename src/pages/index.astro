---
import BaseLayout from '@/layouts/BaseLayout.astro'
import ContentBox from '@/components/sections/ContentBox.astro'
import JobCard from '@/components/job/JobCard.astro'
import DateBrick from '@/components/andelshavere/DateBrick.astro'
import { sanityClient } from '@/lib/sanity'
import { activeJobListingsQuery, latestPublicNewsQuery } from '@/lib/sanityQueries'
import type { JobListing, NewsArticle } from '@/types/sanity'

export const prerender = true;

let listings: JobListing[] = []
let latestNews: NewsArticle[] = []
try {
  ;[listings, latestNews] = await Promise.all([
    sanityClient.fetch<JobListing[]>(activeJobListingsQuery),
    sanityClient.fetch<NewsArticle[]>(latestPublicNewsQuery),
  ])
} catch (error) {
  console.error('Error fetching front page data:', error)
}
---

<BaseLayout 
  title="Velkommen til AKD Danmark"
  description="Et moderne andelsselskab med rødder i traditionerne"
  navTheme="dark"
  bodyBg="forest-green"
>
  <!-- Hero Section -->
  <section class="relative bg-forest-green text-white pt-16 pb-56 sm:pt-20 sm:pb-72 md:pt-24 md:pb-[280px] lg:pt-32 lg:pb-[315px]">
    <div class="container-custom">
      <!-- Pre-headline -->
      <p class="text-mint text-center text-lg font-semibold uppercase tracking-wide mb-6">
        Velkommen til AKD
      </p>
      
      <!-- Main Headline -->
      <h1 class="text-center mb-24 md:mb-32 max-w-5xl mx-auto">
        <span class="block text-white font-sans font-extrabold text-[43px] md:text-[58px] lg:text-[77px] leading-tight">
          ET MODERNE ANDELSSELSKAB <span class="italic font-medium text-mint" style="font-family: 'Lora', serif;">med rødder</span> I TRADITIONERNE
        </span>
      </h1>
      
      <!-- Three Column CTAs -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-16 max-w-6xl mx-auto">
        <!-- Job & karriere -->
        <div class="text-center md:text-left">
          <h2 class="text-mint text-[38px] font-semibold italic mb-4" style="font-family: 'Lora', serif;">
            Job & karriere
          </h2>
          <p class="text-white font-semibold text-lg leading-relaxed mb-6">
            Stærkt fællesskab, moderne produktion og ordentlige forhold
          </p>
          <a href="/job/stillinger" class="link-arrow">
            Se ledige stillinger
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <!-- Bliv andelshaver -->
        <div class="text-center md:text-left">
          <h2 class="text-mint text-[38px] font-semibold italic mb-4" style="font-family: 'Lora', serif;">
            Bliv andelshaver
          </h2>
          <p class="text-white font-semibold text-lg leading-relaxed mb-6">
            Stabil afsætning, rådgivning og individuelle ydelser.
          </p>
          <a href="/bliv-andelshaver" class="link-arrow">
            Sådan bliver du andelshaver
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <!-- For andelshavere -->
        <div class="text-center md:text-left">
          <h2 class="text-mint text-[38px] font-semibold italic mb-4" style="font-family: 'Lora', serif;">
            For andelshavere
          </h2>
          <p class="text-white font-semibold text-lg leading-relaxed mb-6">
            Nyheder, kampagne, rådgivning og Avlerinfo.
          </p>
          <a href="/andelshavere/login" class="link-arrow">
            Log ind
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Overlapping White Section (200px negative margin) -->
  <section class="relative bg-warm-light pt-1 pb-16 md:pb-24">
    <ContentBox
      variant="light"
      preHeader="AKD i tal"
      headline="Et stærkt fællesskab med kapacitet til mere"
      imageUrl="/images/factory-drone.png"
      imageAlt="AKD's fabriksanlæg i Brande med karakteristiske silo og produktionsbygninger"
      pullUp={true}
      items={[
        {
          title: '2 moderne fabrikker',
          description: 'Effektive anlæg med fokus på sikkerhed, kvalitet og stabile leverancer.',
          icon: 'arrow'
        },
        {
          title: '600+ andelshavere',
          description: 'Et stærkt andelsselskab, hvor samarbejde og indflydelse går hånd i hånd.',
          icon: 'arrow'
        },
        {
          title: '~200.000 tons ingredienser årligt',
          description: 'Vi skaber værdi af hele kartoflen, fra stivelse til biprodukter.',
          icon: 'arrow'
        },
        {
          title: '88+ medarbejdere',
          description: 'Dygtige kolleger, ordnede forhold og til at udvikle sig.',
          icon: 'arrow'
        }
      ]}
    />
  </section>

  <!-- Seneste nyt fra AKD -->
  {latestNews.length > 0 && (
    <section class="relative bg-warm-light pt-8 md:pt-12 pb-4 md:pb-6">
      <div class="container-custom">
        <p class="text-mint font-bold text-base mb-6 uppercase tracking-wide text-center">
          Seneste nyt
        </p>


        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto mb-10">
          {latestNews.map((article) => {
            const dateObj = new Date(article.publishedAt)
            return (
              <a
                href={`/nyheder/${article.slug}`}
                class="group bg-light rounded-lg p-6 flex flex-col hover:shadow-md transition-shadow"
              >
                <div class="flex items-start gap-4 mb-3">
                  <DateBrick date={dateObj} />
                  <h3 class="text-lg font-semibold text-charcoal leading-snug group-hover:text-forest-green transition-colors">
                    {article.title}
                  </h3>
                </div>
                {article.excerpt && (
                  <p class="text-sm text-charcoal/70 mb-4 line-clamp-2 flex-grow">
                    {article.excerpt}
                  </p>
                )}
                <span class="inline-flex items-center gap-1 text-burnt-orange text-sm font-medium mt-auto">
                  Læs nyheden
                  <span aria-hidden="true">→</span>
                </span>
              </a>
            )
          })}
        </div>


      </div>
    </section>
  )}

  <!-- Career Section -->
  <section class="relative bg-light pt-24 md:pt-32 lg:pt-40 pb-16 md:pb-24">
    <div class="container-custom">
      <!-- Pre-headline -->
      <p class="text-charcoal font-bold text-base mb-6 uppercase tracking-wide text-center">
        AKD vokser - vi ansætter nu
      </p>
      
      <!-- Main Headline -->
      <h2 class="text-center mb-8 md:mb-12">
        <span class="font-sans font-extrabold text-[43px] md:text-[58px] lg:text-[62px] text-charcoal uppercase leading-tight">
          DIN KARRIERE <span class="font-serif italic normal-case text-mint">kan gro</span> HOS AKD
        </span>
      </h2>
      
      <!-- Body Text -->
      <div class="max-w-4xl mx-auto text-center space-y-6 mb-12">
        <p class="text-charcoal text-lg md:text-xl leading-relaxed">
          Hos AKD laver vi hverdagsingredienser med omtanke. Vi vokser og søger dygtige folk på fabrikkerne i Brande og Toftlund. Vi tilbyder moderne anlæg, ordnede forhold, gode kollegaer og ansvar fra dag ét.
        </p>
        <p class="text-charcoal text-lg md:text-xl leading-relaxed">
          Vi investerer i oplæring, sikkerhed og ordentlige vilkår – hver eneste dag. Er du praktisk anlagt, stabil og glad for godt udstyr? Så er her et godt sted at starte.
        </p>
      </div>
      
      <!-- Primary CTA -->
      <div class="text-center mb-16 md:mb-24">
        <a href="/job/moed-vores-medarbejdere" class="btn-primary">
          <span>Mød vores medarbejdere</span>
          <span class="btn-icon-circle">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </span>
        </a>
      </div>
      
      <!-- Job Listings Section -->
      {listings.length > 0 && (
        <div class="max-w-5xl mx-auto">
          <h3 class="font-serif italic text-4xl md:text-[43px] text-charcoal text-center mb-8 md:mb-12">
            Ledige stillinger - vi søger lige nu
          </h3>
          
          <!-- Job Cards -->
          <div class="space-y-4 mb-8">
            {listings.map((job) => (
              <JobCard
                title={job.title}
                description={job.description}
                location={job.location}
                href={`/job/stillinger/${job.slug}`}
              />
            ))}
          </div>
          
          <!-- Bottom CTAs -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mt-12 mb-48 sm:mb-52 md:mb-56 lg:mb-[200px]">
            <a href="/job/ansoegning" class="btn-secondary">
              Send en uopfordret ansøgning
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            
            <a href="/job/stillinger" class="btn-primary">
              <span>Se alle ledige stillinger</span>
              <span class="btn-icon-circle">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </span>
            </a>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Bliv Andelshaver Section -->
  <section class="relative bg-forest-green text-white pt-1 pb-16 md:pb-24">
    <!-- Content Box with Image and Benefits -->
    <ContentBox
      variant="dark"
      preHeader="Bliv andelshaver"
      headline="Som andelshaver i AKD får du en stabil aftager, faglig sparring og klare vilkår."
      imageUrl="/images/employee.png"
      imageAlt="Andelshaver i traktor under høst med moderne udstyr"
      pullUp={true}
      items={[
        {
          title: 'Fællesskab & indflydelse',
          description: 'Andelsselskab med gennemsigtighed og stemme.',
          icon: 'check'
        },
        {
          title: 'Stabil aftagning',
          description: 'Tydelige aftaler og kampagnevilkår, år efter år.',
          icon: 'check'
        },
        {
          title: 'Faglig rådgivning',
          description: 'Agro-teamet hjælper med dyrkning, optagning og lagring.',
          icon: 'check'
        },
        {
          title: 'Hele værdikæden',
          description: 'Moderne fabrikker og fuld udnyttelse af kartoflen.',
          icon: 'check'
        }
      ]}
    />
  </section>

  <!-- Avlerinfo Selvbetjening Section -->
  <section class="relative bg-forest-green text-white pt-12 md:pt-16 pb-56 sm:pb-72 md:pb-[280px] lg:pb-[315px]">
    <div class="container-custom">
      <!-- Section Header -->
      <p class="text-mint font-bold text-base mb-4 uppercase tracking-wide text-center">
        Avlerinfo Selvbetjening
      </p>
      <h2 class="text-center mb-8 max-w-3xl mx-auto">
        <span class="block font-sans font-extrabold text-4xl md:text-[43px] lg:text-[53px] text-white uppercase leading-tight">
          DIGITALT OVERBLIK <span class="italic font-medium text-mint lowercase" style="font-family: 'Lora', serif;">for andelshavere</span> – DIREKTE PÅ MOBILEN
        </span>
      </h2>
      <div class="max-w-2xl mx-auto text-center mb-12 md:mb-16">
        <p class="text-white/90 text-lg md:text-xl leading-relaxed mb-4">
          Avlerinfo Selvbetjening er AKD's mobile platform til andelshavere.
        </p>
        <p class="text-white/90 text-lg md:text-xl leading-relaxed">
          Her samler vi drift, levering, dokumenter og viden, så du har overblik – også når hverdagen er travl.
        </p>
      </div>
      
      <!-- Features Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto mb-12 md:mb-16">
        <!-- Feature 1 -->
        <div class="bg-white/10 rounded-lg p-5 md:p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-mint/20 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-bold text-[22px] mb-2">Mobil adgang – altid ved hånden</h3>
              <p class="text-white/80 text-sm leading-relaxed">ASB er en mobil app, udviklet til brug i marken, i maskinhuset og på farten.</p>
            </div>
          </div>
        </div>
        
        <!-- Feature 2 -->
        <div class="bg-white/10 rounded-lg p-5 md:p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-mint/20 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-bold text-[22px] mb-2">Drift & levering i realtid</h3>
              <p class="text-white/80 text-sm leading-relaxed">Følg din leveringsplan, se vejehusstatus, ventetider og historiske data – live under kampagnen.</p>
            </div>
          </div>
        </div>
        
        <!-- Feature 3 -->
        <div class="bg-white/10 rounded-lg p-5 md:p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-mint/20 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-bold text-[22px] mb-2">Dokumenter samlet og forståelige</h3>
              <p class="text-white/80 text-sm leading-relaxed">Vejeboner, afregninger, bestillinger og aftaler hænger sammen, så du slipper for mapper, pdf'er og mails.</p>
            </div>
          </div>
        </div>
        
        <!-- Feature 4 -->
        <div class="bg-white/10 rounded-lg p-5 md:p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-mint/20 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-bold text-[22px] mb-2">Bestil digitalt</h3>
              <p class="text-white/80 text-sm leading-relaxed">Bestil læggekartofler, protamylasse, lejeaftaler og forkampagne direkte i app'en – med mulighed for løbende ændringer.</p>
            </div>
          </div>
        </div>
        
        <!-- Feature 5 -->
        <div class="bg-white/10 rounded-lg p-5 md:p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-mint/20 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-bold text-[22px] mb-2">Overblik over økonomi og historik</h3>
              <p class="text-white/80 text-sm leading-relaxed">Se afregninger og leverancer kronologisk opdelt efter år og måned – let at gennemskue.</p>
            </div>
          </div>
        </div>
        
        <!-- Feature 6 -->
        <div class="bg-white/10 rounded-lg p-5 md:p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-mint/20 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-mint" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-bold text-[22px] mb-2">Viden der hjælper i praksis</h3>
              <p class="text-white/80 text-sm leading-relaxed">Direkte adgang til sortsinfo, skimmelvarsling, vidensbase og nyheder fra AKD og KMC Agro.</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-8">
        <!-- Secondary CTA 
        <a href="#kontakt" class="link-arrow">
          Tal med os om ASB
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>-->

        
        
        <!-- Primary CTA -->
        <a href="/bliv-andelshaver" class="btn-primary">
          <span>Sådan bliver du andelshaver</span>
          <span class="btn-icon-circle">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- Ansvar i Praksis Section (Overlapping) -->
  <section class="relative bg-warm-light pt-1 pb-16 md:pb-24">
    <ContentBox
      variant="light"
      preHeader="Ansvar i praksis"
      headline="Vi bruger hele kartoflen og laver biprodukter til ny værdi."
      imageUrl="/images/kartofler-haand.png"
      imageAlt="Produktion af kartoffelmel og biprodukter på moderne udstyr"
      pullUp={true}
      items={[
        {
          title: 'Hele råvaren i brug',
          description: 'Fra stivelse til pulp og protamylasse. Intet går til spilde.',
          icon: 'arrow'
        },
        {
          title: 'Lokale kredsløb',
          description: 'Foder og gødning, der giver mening i kredsløbet.',
          icon: 'arrow'
        },
        {
          title: 'Energi & klima',
          description: 'Effektive processer, vedvarende løsninger og løbende optimering.',
          icon: 'arrow'
        }
      ]}
    />
    
    <!-- CTAs Below White Box -->
    <div class="container-custom">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mt-12 mb-24">
        <!-- Secondary CTA -->
        <a href="/om-akd/ansvarlighed" class="btn-secondary">
          Ansvarlighed og transparens
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        
        <!-- Primary CTA -->
        <a href="/om-akd/rest-og-biprodukter" class="btn-primary">
          <span>Rest- og biprodukter</span>
          <span class="btn-icon-circle">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

