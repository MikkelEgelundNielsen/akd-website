  { name: 'Kvælstof', content: '14,5', price: '7,00', total100: '102,00 kr.', totalAdj: '51 kr.' },
  { name: 'Fosfor', content: '2,84', price: '10,00', total100: '28,00 kr.', totalAdj: '25 kr.' },
  { name: 'Kali', content: '42,8', price: '12,59', total100: '539,00 kr.', totalAdj: '485 kr.' },
  { name: 'Magnesium', content: '2,17', price: '4,00', total100: '9,00 kr.', totalAdj: '8 kr.' },
  { name: 'Svovl', content: '5,40', price: '2,44', total100: '13,00 kr.', totalAdj: '12 kr.' },
]

