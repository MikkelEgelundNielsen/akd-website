---
import BaseLayout from '@/layouts/BaseLayout.astro'

export const prerender = true;

// Document links (update hrefs when actual PDFs are uploaded)
const documents = {
  protamylasseBrande: { label: 'Næringsindhold af protamylasse – AKD Midtjylland, kampagnen 2024/2025', href: '#' },
  protamylasseToftlund: { label: 'Næringsindhold af protamylasse – AKD Sønderjylland, kampagnen 2024/2025', href: '#' },
  pulpBrande: { label: 'Analysecertifikat for pulpproduktion i Brande, november 2025', href: '#' },
  pulpToftlund: { label: 'Analysecertifikat for pulpproduktion i Toftlund, december 2025', href: '#' },
  restprodukter: { label: 'Liste over restprodukter', href: '#' },
}

// Maskinstation list
const maskinstationer = [
  'Hjortlund Maskinstation, Grindsted',
  'Brdr. Rasmussen A/S, Kibæk',
  'Midtjydsk Maskinstation, Brande',
  'Dyrbjerggaard Maskinstation A/S, Karup',
  'Søndergaards Maskinstation, Løgumkloster',
  'Jejsing Maskinstation, Tønder',
  'Maskinstation Hans Tobiasen, Ribe',
