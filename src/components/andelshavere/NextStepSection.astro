---
/**
 * Contact Bjarne Section
 * "Har du brug for en snak?" section with contact card
 * Can be used on dashboard and other andelshavere pages
 */

import IconLink from '@/components/ui/IconLink.astro'

interface Props {
  variant?: 'full' | 'compact'
  showContactCard?: boolean
}

const { variant = 'full', showContactCard = true } = Astro.props
---

<section class="relative bg-charcoal pt-12 md:pt-16 pb-12 md:pb-16">
  <div class="container-custom">
    <!-- Section Header -->
    <h2 class="mb-2 max-w-3xl mx-auto text-center">
      <span class="block font-sans font-extrabold text-[29px] md:text-4xl lg:text-[43px] text-white uppercase leading-tight">
        HAR DU <span class="italic font-medium text-mint lowercase" style="font-family: 'Lora', serif;">BRUG FOR</span> en snak?
      </span>
    </h2>
    
    <p class="text-mint font-semibold text-lg md:text-xl max-w-2xl mx-auto mb-4 text-center">
      Tag fat i vores Agrochef Bjarne Thisgaard
    </p>
    
    <p class="text-white/90 text-base max-w-2xl mx-auto mb-8 text-center">
      Hvis du har spørgsmål til drift, kampagne, leveringsforhold eller andet, er du altid velkommen til at tage fat i Bjarne. Nogle gange er en kort snak den nemmeste vej videre.
    </p>
    
    <!-- Contact Card -->
    {showContactCard && (
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
          <div class="flex flex-col sm:flex-row">
            <!-- Image Column -->
            <div class="sm:w-1/3 aspect-square sm:aspect-auto relative bg-warm-light">
              <img 
                src="/images/bjarne.jpg" 
                alt="Bjarne Thisgaard, Agrochef" 
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            
            <!-- Content Column -->
            <div class="sm:w-2/3 p-5 md:p-6 flex flex-col justify-center">
              <h3 class="font-sans font-bold text-[22px] md:text-2xl text-charcoal mb-4 leading-tight">
                Bjarne Thisgaard, Agrochef
              </h3>
              
              <!-- CTA Links -->
              <div class="flex flex-col sm:flex-row gap-3 sm:gap-5">
                <IconLink href="tel:+4500000000" icon="phone">
                  Ring til Bjarne
                </IconLink>
                <IconLink href="/kontakt" icon="calendar">
                  Bliv ringet op
                </IconLink>
              </div>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</section>
