---
/**
 * Andelshavere Navigation Cards
 * Displays navigation items as cards - perfect for dashboard/overview pages
 * Uses the same Sanity navigation data as AndelshavereNav for consistency
 */

import { sanityClient } from '@/lib/sanity'
import { andelshavereNavigationQuery } from '@/lib/sanityQueries'
import type { AndelshavereNavigation } from '@/types/sanity'

// Fetch navigation from Sanity
const navigation: AndelshavereNavigation | null = await sanityClient.fetch(andelshavereNavigationQuery)
---

{navigation && navigation.menuItems && navigation.menuItems.length > 0 && (
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {navigation.menuItems.map((item) => (
      <div class="bg-light p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h2 class="text-2xl font-serif text-forest-green mb-4">
          {item.icon && <span aria-hidden="true">{item.icon} </span>}
          {item.label}
        </h2>
        
        {item.description && (
          <p class="text-charcoal mb-4">
            {item.description}
          </p>
        )}
        
        <a 
          href={item.href} 
          class="inline-flex items-center gap-2 text-burnt-orange hover:text-amber transition-colors font-semibold"
        >
          Gå til {item.label.toLowerCase()}
          <span aria-hidden="true">→</span>
        </a>
      </div>
    ))}
  </div>
)}

