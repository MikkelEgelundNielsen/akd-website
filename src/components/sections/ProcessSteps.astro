---
/**
 * ProcessSteps Component
 * A numbered step-by-step visual with connected lines, showing a journey/process.
 * 
 * Usage:
 * <ProcessSteps
 *   steps={[
 *     { number: 1, title: 'Step 1', description: 'Description...' },
 *     { number: 2, title: 'Step 2', description: 'Description...' },
 *   ]}
 * />
 */

interface Step {
  number: number
  title: string
  description: string
}

interface Props {
  steps: Step[]
  variant?: 'light' | 'dark'
}

const { 
  steps,
  variant = 'light'
} = Astro.props

const isDark = variant === 'dark'
---

<div class="process-steps">
  {steps.map((step, index) => (
    <div class="process-step">
      <!-- Number Circle -->
      <div class="process-step-indicator">
        <div class:list={[
          'process-step-number',
          isDark ? 'bg-mint text-charcoal' : 'bg-forest-green text-white'
        ]}>
          {step.number}
        </div>
        {/* Connecting line (not on last item) */}
        {index < steps.length - 1 && (
          <div class:list={[
            'process-step-line',
            isDark ? 'bg-mint/30' : 'bg-forest-green/30'
          ]} />
        )}
      </div>
      
      <!-- Content -->
      <div class="process-step-content">
        <h3 class:list={[
          'process-step-title',
          isDark ? 'text-white' : 'text-charcoal'
        ]}>
          {step.title}
        </h3>
        <p class:list={[
          'process-step-description',
          isDark ? 'text-white/90' : 'text-charcoal/80'
        ]}>
          {step.description}
        </p>
      </div>
    </div>
  ))}
</div>

<style>
  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  .process-step {
    display: flex;
    gap: 1.5rem;
    position: relative;
  }
  
  .process-step-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }
  
  .process-step-number {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Open Sans', sans-serif;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
  }
  
  .process-step-line {
    width: 3px;
    flex-grow: 1;
    min-height: 2rem;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    border-radius: 2px;
  }
  
  .process-step-content {
    padding-bottom: 2rem;
    flex: 1;
  }
  
  .process-step:last-child .process-step-content {
    padding-bottom: 0;
  }
  
  .process-step-title {
    font-family: 'Open Sans', sans-serif;
    font-weight: 700;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }
  
  .process-step-description {
    font-size: 1rem;
    line-height: 1.6;
  }
  
  /* Responsive */
  @media (min-width: 768px) {
    .process-step {
      gap: 2rem;
    }
    
    .process-step-number {
      width: 56px;
      height: 56px;
      font-size: 1.5rem;
    }
    
    .process-step-title {
      font-size: 1.65rem;
    }
    
    .process-step-description {
      font-size: 1.125rem;
    }
    
    .process-step-content {
      padding-bottom: 2.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .process-step-content {
      padding-bottom: 3rem;
    }
  }
</style>
