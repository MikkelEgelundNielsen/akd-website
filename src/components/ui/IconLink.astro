---
/**
 * IconLink Component
 * A link with an icon (phone, calendar, etc.) on the left, text, and arrow on hover.
 * Uses burnt-orange color scheme matching existing CTAs.
 * 
 * Usage:
 * <IconLink href="tel:+4512345678" icon="phone">Ring til Bjarne</IconLink>
 * <IconLink href="/kontakt" icon="calendar">Bliv ringet op</IconLink>
 */

interface Props {
  href: string
  icon: 'phone' | 'calendar' | 'email' | 'arrow'
  class?: string
}

const { href, icon, class: className = '' } = Astro.props
---

<a 
  href={href}
  class:list={['icon-link group', className]}
>
  <!-- Icon -->
  <span class="icon-link-icon">
    {icon === 'phone' && (
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
      </svg>
    )}
    {icon === 'calendar' && (
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
    )}
    {icon === 'email' && (
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
    )}
    {icon === 'arrow' && (
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    )}
  </span>
  
  <!-- Text -->
  <span class="icon-link-text">
    <slot />
  </span>
  
  <!-- Arrow -->
  <svg class="icon-link-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
  </svg>
</a>

<style>
  .icon-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: #E87722; /* burnt-orange */
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .icon-link:hover {
    color: #F5A623; /* amber */
  }
  
  .icon-link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(232, 119, 34, 0.1); /* burnt-orange/10 */
    transition: background-color 0.2s ease;
  }
  
  .icon-link:hover .icon-link-icon {
    background-color: rgba(232, 119, 34, 0.2); /* burnt-orange/20 */
  }
  
  .icon-link-text {
    font-family: 'Open Sans', sans-serif;
  }
  
  .icon-link-arrow {
    width: 20px;
    height: 20px;
    transition: transform 0.2s ease;
  }
  
  .icon-link:hover .icon-link-arrow {
    transform: translateX(4px);
  }
  
  /* Responsive */
  @media (min-width: 768px) {
    .icon-link {
      font-size: 1.125rem;
    }
    
    .icon-link-icon {
      width: 44px;
      height: 44px;
    }
  }
</style>
